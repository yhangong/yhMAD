<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2C9CA"
    tools:context=".OrderMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonAs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1A4C81"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:text="Order Number (Ascending)"
            android:layout_marginTop="300dp"/>

        <Button
            android:id="@+id/buttonDe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1A4C81"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:text="Order Number (Descending)"
            />

        <Button
            android:id="@+id/buttonExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#771A81"
            android:textColor="#FFFFFF"
            android:text="Exit" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>